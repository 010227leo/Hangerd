@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@model HangerdSample.Web.Models.AccountSignUpModel

<div class="clearfix">
	<h4>Sign Up</h4>

	<hr />

	<form id="formLogin" class="form-horizontal">
		<div class="form-group">
			<label class="col-md-3 control-label">Email:</label>
			<div class="col-md-5">
				@Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email" })
			</div>
		</div>

		<div class="form-group">
			<label class="col-md-3 control-label">Password:</label>
			<div class="col-md-5">
				@Html.PasswordFor(x => x.Password, new { @class = "form-control" })
			</div>
		</div>

		<div class="form-group">
			<label class="col-md-3 control-label">Confirm Password:</label>
			<div class="col-md-5">
				@Html.PasswordFor(x => x.PasswordConfirm, new { @class = "form-control" })
			</div>
		</div>

		<div class="form-group">
			<label class="col-md-3 control-label">Name:</label>
			<div class="col-md-5">
				@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-3 col-md-5">
				<button id="btnSubmit" type="button" class="btn btn-primary ">Sign Up</button>
			</div>
		</div>
	</form>
</div>

@section scripts {
	<script type="text/javascript">
		$("#btnSubmit").bind("click", function () {
			if (!$.trim($("#Email").val())) {
				alert("Email is empty");
				return;
			}

			if (!$("#Password").val()) {
				alert("Password is empty");
				return;
			}

			if ($("#Password").val() !== $("#PasswordConfirm").val()) {
				alert("Different password");
				return;
			}

			if (!$.trim($("#Name").val())) {
				alert("Name is empty");
				return;
			}

			$.ajax({
				type: "POST",
				dataType: "json",
				url: "@Url.Action("SignUp", "Account")",
				data: $("#formLogin").serialize(),
				success: function (result) {
					alert(result.Message);

					if (result.Success) {
						window.location.href = "@Url.Action("SignIn", "Account")";
					}
				}
			});
		});
	</script>
}